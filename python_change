def run ():
	decimal = (int(input("Ingrese un nÃºmero decimal: ")))
	modulo = [] 
	residuo = decimal // 2 
	modulo.append(decimal%2)
	
	if decimal == 1 or decimal == 0:
		print("Para estos casos el nÃºmero binario es el mismo decimal ğŸ˜")
		repeat()
	else:
		while residuo != 1:
			residuo = residuo // 2
			decimal = decimal // 2
			modulo.append(decimal%2)
		modulo.append(residuo)
		print ("â¡ El nÃºmero binario es: ",modulo[::-1], " â—")
		repeat()


def repeat():
	menu = """--------------------------------------
	Deseas ingresar otro nÃºmero para hacer la conversiÃ³n
	1 - SI ğŸ˜
	2 - NO ğŸ¤”

	Elige una opcciÃ³n: 	"""
	opccion = input(menu)
	if opccion == "1":
		run()
	elif opccion == "2":
		print("Espero verte pronto, y nunca pares de aprender")
	else:
		print("No es una opcciÃ³n valida")
